/**
 * 16-bit adder: Adds two 16-bit two's complement values.
 * The most significant carry bit is ignored.
 */
CHIP Add16 {
    IN a[16], b[16];
    OUT out[16];
    PARTS:
    FullAdder(a=a[0],b=b[0], c=false, sum=sum1, carry=carry1, sum=out[0]);
    FullAdder(a=a[1], b=b[1], c=carry1, sum=sum2, carry=carry2, sum=out[1]);
    FullAdder(a=a[2],b=b[2], c=carry2, sum=sum3, carry=carry3, sum=out[2]);
    FullAdder(a=a[3], b=b[3], c=carry3, sum=sum4, carry=carry4, sum=out[3]);
    FullAdder(a=a[4],b=b[4], c=carry4, sum=sum5, carry=carry5, sum=out[4]);
    FullAdder(a=a[5], b=b[5], c=carry5, sum=sum6, carry=carry6, sum=out[5]);
    FullAdder(a=a[6],b=b[6], c=carry6, sum=sum7, carry=carry7, sum=out[6]);
    FullAdder(a=a[7], b=b[7], c=carry7, sum=sum8, carry=carry8, sum=out[7]);
    FullAdder(a=a[8],b=b[8], c=carry8, sum=sum9, carry=carry9, sum=out[8]);
    FullAdder(a=a[9], b=b[9], c=carry9, sum=sum10, carry=carry10, sum=out[9]);
    FullAdder(a=a[10],b=b[10], c=carry10, sum=sum11, carry=carry11, sum=out[10]);
    FullAdder(a=a[11], b=b[11], c=carry11, sum=sum12, carry=carry12, sum=out[11]);
    FullAdder(a=a[12],b=b[12], c=carry12, sum=sum13, carry=carry13, sum=out[12]);
    FullAdder(a=a[13], b=b[13], c=carry13, sum=sum14, carry=carry14, sum=out[13]);
    FullAdder(a=a[14],b=b[14], c=carry14, sum=sum15, carry=carry15,sum=out[14]);
    FullAdder(a=a[15], b=b[15], c=carry15, sum=out[15]);
}